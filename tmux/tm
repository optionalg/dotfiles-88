#!/bin/bash
#------------------------------------------------------------------------------#
# vi: set sw=4 ts=4 ai:                            ("set modeline" in ~/.exrc) #
#------------------------------------------------------------------------------#
# Program      : tm                                                            #
#                                                                              #
# Author       : Ton Kersten                                   The Netherlands #
#------------------------------------------------------------------------------#

#------------------------------------------------------------------------------#
#                    V e r s i o n   i n f o r m a t i o n                     #
#------------------------------------------------------------------------------#
# $Id:: tm 4 2011-02-13 14:44:31 tonk                                       $: #
# $Revision:: 4                                                             $: #
# $Author:: Ton Kersten <Ton.Kersten@ATComputing.nl>                        $: #
# $Date:: 2011-02-13 14:44:42 +0100 (Sun, 13 Feb 2011)                      $: #
#------------------------------------------------------------------------------#
#             E n d   o f   v e r s i o n   i n f o r m a t i o n              #
#------------------------------------------------------------------------------#

#------------------------------------------------------------------------------#
# Start in the HOME directory                                                  #
#------------------------------------------------------------------------------#
cd

#------------------------------------------------------------------------------#
# Start or reattach tmux                                                       #
#------------------------------------------------------------------------------#
if tmux has-session > /dev/null 2>&1
then
	cmd="attach-session -d"
fi

#------------------------------------------------------------------------------#
# Start with a program?                                                        #
#------------------------------------------------------------------------------#
if [[ ${#} == 0 ]]
then
	tmux -u ${cmd:-}
else
	tmux -u ${cmd:-} "${@:-}"
fi
