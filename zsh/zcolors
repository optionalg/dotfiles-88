# export TERM=xterm-color
autoload colors zsh/terminfo
colors

for color in RED GREEN YELLOW BLUE MAGENTA CYAN WHITE GREY
do
    eval C_L_$color='%{$fg[${(L)color}]%}'
    eval C_$color='%{$fg_bold[${(L)color}]%}'
done
C_OFF="%{$reset_color%}"
