#------------------------------------------------------------------------------#
# The terminfo directory and the terminal                                      #
#------------------------------------------------------------------------------#
if [[ ${TERM} == screen* ]]
then
	T="s/${TERM}"
	if [[ ( ! -e "/lib/terminfo/${T}" ) && ( ! -e "/usr/share/terminfo/${T}" ) ]]
	then
		export TERM=screen
	fi
fi

export VI="/usr/bin/vim"
export ID="/usr/bin/id"
export PS="-eaf"
