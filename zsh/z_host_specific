#------------------------------------------------------------------------------#
# The terminal settings and the terminal (Switch to plain screen if no 256    #
#------------------------------------------------------------------------------#
if [[ ${TERM} == screen* ]]
then
	T="${TERM}"
	if [[ ! (	-e "/lib/terminfo/s/${T}"					|| \
				-e "/usr/share/terminfo/s/${T}"				|| \
				-e "/opt/local/share/terminfo/73/${TERM}" ) ]]
	then
		export TERM=screen
	fi
fi

export VI="/usr/bin/vim"
export ID="/usr/bin/id"
export PS="-eaf"
