TRAPEXIT()
{
	echo ${PWD} > ~/.zpwd

	# $ZSSH has @ for slaves and M@ for masters
	[[ ${ZSSH} == "m@" ]] && rm -f ~/.ssh/${SSH_CLIENT// /_}

	# [[ ${-} = *i* ]] && clear
}
