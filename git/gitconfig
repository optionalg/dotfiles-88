# vi: set sw=4 ts=4 ai:

# For this to work, you need git version > 1.7.10
[include]
	path = ~/.gitconfig.private

[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = less -FRSX
	quotepath = false
	sshCommand = "ssh -o ForwardX11=false  -F /dev/null"

[push]
    default = upstream

[pull]
	default = current

[diff]
	memonicprefix = true

[branch]
	autosetuprebase = always

[apply]
	whitespace = nowarn

[merge]
	summary = true

[rerere]
	enabled = true

[rebase]
	autosquash = true

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	whitespace = red reverse
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[giggle]
	main-window-maximized = false
	main-window-geometry = 1187x715+0+29
	main-window-view = HistoryView
	file-view-vpane-position = 226
	history-view-vpane-position = 456
	show-graph = true


# rewrites
[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "git://github.com"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
    pushInsteadOf = "https://github.com/"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
	pushInsteadOf = "https://gist.github.com/"

# Any GitHub repo with my username should be checked out r/w by default
# http://rentzsch.tumblr.com/post/564806957/public-but-hackable-git-submodules

[url "git@github.com:tonk/"]
	insteadOf = "git://github.com/tonk/"
[help]
	autocorrect = 1

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
	default = current


[alias]
	ls = ls-files
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	mdiff = diff origin/master
	mdf = diff origin/master
	lg = log -p
	cca = commit -a --amend -C HEAD
	last = log --name-status -1 HEAD
	timeline = log --graph \"--pretty=format:%C(192)%h%Creset by %C(bold magenta)%an%Creset (%ar)%C(182)%d%Creset%n%s%n%b\" --all
	d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"

	#merges
	ours = "!f() { git co --ours $@ && git add $@; }; f"
	theirs = "!f() { git co --theirs $@ && git add $@; }; f"
